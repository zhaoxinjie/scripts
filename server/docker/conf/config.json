{
  "inbounds": [
    {
      "port": 9527,
      "protocol": "vmess",
      "settings": {
        "clients": [
          {
            "id": "97587a52-fb72-4d55-9ad7-4f32f41cf7c3",  // 用 `uuidgen` 生成
            "alterId": 0             // 0 表示启用 VMess AEAD
          }
        ]
      },
      "streamSettings": {
        "network": "ws",
        "security": "tls",          // 启用 TLS
        "tlsSettings": {
          "certificates": [
            {
              "certificateFile": "/etc/v2ray/certs/fullchain.pem",  # 证书路径
              "keyFile": "/etc/v2ray/certs/privkey.pem"             # 私钥路径
            }
          ]
        },
        "wsSettings": {
          "path": "/ray"            // WebSocket 路径，可自定义
        }
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "settings": {}
    }
  ]
}